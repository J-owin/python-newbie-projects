def program(answer, length):
    print("loading", end = "")
    for t in range(3):
        print(".",end="")
        time.sleep(1)

    hints = 3 if len(answer) > 5 else 1
    wrong_guess = 0
    guessed_letters = set()
    is_running = True

    while is_running:
        time.sleep(1)
        display_man(wrong_guess)
        display_length(length)
        guess = input("ğŸ”¤ Enter a letter or type 'hint' for getting a hint! : ").lower()

        if guess == "hint":
            if hints > 0:
                unrevealed = [i for i in range(len(length)) if length[i] == "_"]
                if unrevealed:
                    r_index = random.choice(unrevealed)
                    hint_letter = answer[r_index]
                    print("ğŸ§  Hint used! Revealed letter:", hint_letter)
                    for i in range(len(answer)):
                        if answer[i] == hint_letter:
                            length[i] = hint_letter
                    guessed_letters.add(hint_letter)
                    hints -= 1
                else:
                    print("âŒ All letters already revealed!")
            else:
                print("ğŸš« Can't use hint! No hints left.")
            time.sleep(1)

        else:
            if len(guess) != 1 or not guess.isalpha():
                print("âš ï¸ Invalid input! Enter a single alphabet letter.")
                time.sleep(1)
                continue

            if guess in guessed_letters:
                print(f"ğŸ” You already guessed the letter '{guess}'!")
                time.sleep(2)
                continue

            if guess in answer:
                print(f"âœ… Nice! '{guess}' is in the word!")
                for i in range(len(answer)):
                    if answer[i] == guess:
                        length[i] = guess
                guessed_letters.add(guess)
            else:
                print(f"âŒ Nope! '{guess}' is not in the word.")
                wrong_guess += 1
            time.sleep(1)

            if "_" not in length:
                display_man(wrong_guess)
                display_answer(answer)
                print("ğŸ‰ You win! Great job! ğŸ†")
                time.sleep(1)
                is_running = False
            elif wrong_guess >= len(hangman_art) - 1:
                display_man(wrong_guess)
                print(f"ğŸ’€ THE STICK MAN IS DEAD!!!\nğŸ˜¢ YOU LOST THE GAME!\nğŸ“– The correct answer was: '{answer}'")
                is_running = False

def display_man(wrong_guess):
    print("************")
    for line in hangman_art[wrong_guess]:
        print(line)
    print("************")
    time.sleep(1)

def display_length(length):
    print("ğŸ“ Word: " + " ".join(length))

def display_answer(answer):
    print("ğŸ” Answer: " + " ".join(answer))

def main():
    print("ğŸ®*****************************ğŸ®")
    print("ğŸ‰  WELCOME TO THE HANGMAN GAME  ğŸ‰")
    print("ğŸ®*****************************ğŸ®\n")

    print("""ğŸ“š Choose your topic:
1ï¸âƒ£ Animals ğŸ¾
2ï¸âƒ£ Countries ğŸŒ
3ï¸âƒ£ Foods ğŸ”
4ï¸âƒ£ Objects ğŸ§±
5ï¸âƒ£ Others ğŸ²
""")
    topic = input("ğŸ‘‰ Enter the topic you want to play on (1-5): ")

    match topic:
        case "1":
            answer = random.choice(words_animals)
        case "2":
            answer = random.choice(words_countries)
        case "3":
            answer = random.choice(words_foods)
        case "4":
            answer = random.choice(words_objects)
        case "5":
            answer = random.choice(words_others)
        case _:
            print("â“ Invalid choice.")
            return

    length = ["_"] * len(answer)
    program(answer, length)

if __name__ == "__main__":
    main()
